<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

  <nav class="navcolor orange">
    <ul class="navbar"> 
      <h2 class="navbar"><%= link_to "Inicio", root_path%></h2>
      <h5 class="navbar"><%= link_to "Articulos", articles_path%></h5>
      <h5> <%=link_to "Mis articulos", myarticles_path%></h5>

      <div>
      <% if user_signed_in? %>
      Hola  <strong><%= current_user.email %>!</strong>
      <%= link_to 'Editar Perfil', edit_user_registration_path, :class => 'btn btn-default btn-sm' %> 
      <%= link_to "Salir", destroy_user_session_path, method: :delete, :class => 'btn btn-secondary btn-sm'  %>
      <% else %>
      <%= link_to "Registrarse", new_user_registration_path, :class => 'navbar-link'  %> |
      <%= link_to "Ingresar", new_user_session_path, :class => 'navbar-link'  %>
      <% end %>
    </div>
      
    </ul>
  </nav>

  <%# para notificaciones%>
  <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%# para configuracion inicial de devise %>
    <%= yield %>

    <!-- Footer -->
<footer class="page-footer font-small special-color-dark pt-4 title">

    <!-- Footer Elements -->
    <div class="container">

      <!-- Social buttons -->
      <ul class="list-unstyled list-inline text-center">
        <li class="list-inline-item">
          <a class="btn-floating btn-fb mx-1">
            <i class="fa fa-facebook"> </i>
          </a>
        </li>
        <li class="list-inline-item">
          <a class="btn-floating btn-tw mx-1">
            <i class="fa fa-twitter"> </i>
          </a>
        </li>
        <li class="list-inline-item">
          <a class="btn-floating btn-gplus mx-1">
            <i class="fa fa-instagram"> </i>
          </a>
        
      </ul>
      <!-- Social buttons -->

    </div>
    <!-- Footer Elements -->

    <!-- Copyright -->
    <div class="footer-copyright text-center py-3"> <a> Blog</a> por Hector Reinosa
      
    </div>
    <!-- Copyright -->

  </footer>
  <!-- Footer -->
  </body>
</html>
