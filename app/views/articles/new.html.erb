<%# form_for crea un formulario para el parametro que se le pase %>
<div class=" col-md-6"> 
<%=form_for(@article) do |f| %>

     <%= f.text_field :title, placeholder: "Titulo", class:"form-control"%> <br/>
     <%= f.text_area :content, placeholder: "Contenido del Post", class:"form-control"%>
     

<%end%>

</div>
