<%=form_for(@article) do |f| %>
     <% @article.errors.full_messages.each do |message|%>
     <div class="alert-warning">
          Alert: <%= message%>
     </div>
     <%end%><br>

     <%= f.text_field :title, placeholder: "Titulo del Articulo", class:"form-control"%> <br/>
     <%= f.text_area :content, placeholder: "Contenido del Post", class:"form-control", style: "height:300px;"%><br>
     <%= f.submit "Publicar", class: "btn btn-primary"%>

<%end%>
